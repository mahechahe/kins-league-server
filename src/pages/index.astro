---
import Layout from '../layouts/Layout.astro'

const response = await fetch('https://kings-league-api.mahechahe.workers.dev/teams')
const teams = await response.json()
---

<Layout title="Welcome to Astro.">
	<div class="container m-auto">
		<header class="flex">
			{teams.map(({ id, image, name }) => (
				<a href={`/team/${id}`}>
					<img src={image} alt={`Escudo del equipo ${name}`}/>
				</a>
			))}
		</header>
	</div>
	<main>
		<h1 class="text-2xl text-red-500">Welcome Astro</h1>
	</main>
</Layout>
